<%include ./partials/header %>

<h1 class="ui header centered">Edit a Friend</h1>
<div class="ui container segment text">
    <form action="/friends/<%=friend._id%>?_method=PUT" method="POST">
        <div class="ui form">
            <div class="two fields">
                <div class="field">
                    <label>First name</label>
                    <input type="text" name="friend[first_name]" value="<%=friend.first_name%>" required>
                </div>
                <div class="field">
                    <label>Last name</label>
                    <input type="text" name="friend[last_name]" value="<%=friend.last_name%>">
                </div>
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="friend[image]" value="<%=friend.image%>">
            </div>
            <div class=" two fields">
                <div class="field">
                    <label>Phone Number</label>
                    <input type="tel" name="friend[phone]" value="<%=friend.phone%>">
                </div>
                <div class="field">
                    <label>Date of Birth:</label>
                    <input type="date" name="friend[date_birth]" value="<%=friend.date_birth.toISOString().substring(0,10)%>">
                </div>
            </div>
            <div class="field">
                    <label>Description</label>
                    <textarea name="friend[description]" cols="30" rows="10"><%=friend.description%></textarea>
            </div>
            <button class="ui fluid button green " type="submit">Submit</button>
        </div>
    </form>
</div>
<%include ./partials/footer %>